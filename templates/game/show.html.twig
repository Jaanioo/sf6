{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ game.name }}
                </h3>
            </div>
            <div class="panel-body">
                <p> Release date: {{ game.releaseDate|date('d-m-Y') }}</p>
                <p> Score: {{ game.score }} / 10 </p>
                {% if game.category %}
                <p> Category: {{ game.category.name }} </p>
                {% endif %}
                <h2>Description: </h2>
                <p>
                    {{ game.description }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}

